(def (drop n l)
  (cond (= n 0) l
        (nil? l) nil
        :else (drop (dec n) (rest l))))

(def (take n l)
  (cond (= n 0) nil
        (nil? l) nil
        :else (cons (first l) (take (dec n) (rest l)))))

(def (partition n coll)
  (if (= 0 (count coll)) nil
    (do
      (let* ((p (take n coll)))
        (cond (nil? p) nil
              (= n (count p)) (cons p (partition n (drop n coll)))
              :else (list p))))))



(defmacro let (defs & body)
  (do (when (odd? (len defs)) (throw (String "Error in let syntax. bindings must be of even length: " defs "")))
      `(let* ,(partition 2 defs) ,@body)))



(defmacro while (test & body)
