;; set the initial namespace to "core"
(def* *ns* "core")

;; first is a wrapper around calling
;; the .first method on a type
(def* first
  (fn (x) (. x (first))))


;; same for rest
(def* rest
  (fn (x) (. x (rest))))


(defmacro* defmacro
  (fn (name args & body)
    (list 'defmacro* name
          (list 'fn args
                (cons 'do body)))))



