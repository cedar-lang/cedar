;; Base Exceptions

(deftype exception
  ;; the exception's message defaults to an empty string
  ;; to be filled in later
  (def what "")
  (def (new self m)
    (sets what m))
  (def (str self)
    (gets what))
  (def (repr self)
    (gets what)))


(deftype assertion-error [exception])

